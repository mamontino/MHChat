<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/doc_info_dialog_close"
        android:layout_width="@dimen/base_margin_24dp"
        android:layout_height="@dimen/base_margin_24dp"
        android:src="@drawable/ic_close_grey_900_24dp"
        android:layout_gravity="end"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/doc_info_image"
                    android:layout_width="@dimen/base_size_120dp"
                    android:layout_height="@dimen/base_size_120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_logo"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_element_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doc_info_hint_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="ФИО: "/>

                    <TextView
                        android:id="@+id/doc_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Иванов Иван Иванович"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_element_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doc_info_hint_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Стаж: "/>

                    <TextView
                        android:id="@+id/doc_info_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10"/>

                    <TextView
                        android:id="@+id/doc_info_hint_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text=" лет"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_element_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doc_info_hint_spec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Специальность: "/>

                    <TextView
                        android:id="@+id/doc_info_spec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Терапевт"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/base_element_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/doc_info_hint_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Дополнительно: "/>

                    <TextView
                        android:id="@+id/doc_info_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/description"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/doc_info_btn_schedule"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_btn_dialog"
            android:text="@string/nav_schedule"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/doc_info_btn_record"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_btn_dialog"
            android:text="@string/nav_record"/>

    </LinearLayout>

</LinearLayout>