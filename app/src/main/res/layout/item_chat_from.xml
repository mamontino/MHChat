<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/base_margin_48dp"
                android:layout_marginRight="@dimen/base_margin_48dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/incoming_message_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@string/action_info"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/timestamp_from"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:maxLines="1"
            android:text="13:15"
            android:textSize="@dimen/text_size_8sp"/>
    </LinearLayout>

</RelativeLayout>
