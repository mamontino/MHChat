<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/contacts_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_size_72dp"
                android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/sale_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/holder_sale"/>

    <TextView
        android:id="@+id/sale_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/sale_item_image"
        android:layout_centerVertical="true"
        android:textColor="#444444"
        android:textSize="@dimen/text_size_20sp"/>

</RelativeLayout>