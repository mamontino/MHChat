<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="320dp"
              android:background="@color/black_effective"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingBottom="@dimen/base_margin_64dp"
              android:paddingTop="@dimen/base_margin_64dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_desc_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_gravity="center_horizontal"
                android:text="@string/about"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_20sp"/>

            <TextView
                android:id="@+id/about_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/project_info"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/text_size_16sp"/>

            <TextView
                android:id="@+id/about_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_gravity="center_horizontal"
                android:text="www.vk.com"
                android:textSize="@dimen/text_size_20sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>