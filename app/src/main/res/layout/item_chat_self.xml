<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin_48dp"
                android:layout_marginStart="@dimen/base_margin_48dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_gravity="end"
                  android:layout_marginTop="2dp"
                  android:background="@drawable/message_bg_out"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/message_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message"
            android:layout_gravity="top"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_14sp"/>

        <TextView
            android:id="@+id/timestamp_self"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="13:15"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/text_size_8sp"/>

        <ImageView
            android:id="@+id/unread_message_self"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_done_all_white_12dp"/>

    </LinearLayout>
</RelativeLayout>

